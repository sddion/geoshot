{
  "expo": {
    "name": "GeoShot",
    "slug": "geoshot",
    "version": "2.1.3",
    "orientation": "portrait",
    "icon": "./assets/images/android/mipmap-xxxhdpi/geoshot.png",
    "scheme": "geoshot-camera-app",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "app.geoshot.camera",
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "Allow $(PRODUCT_NAME) to access your photos.",
        "NSPhotoLibraryAddUsageDescription": "Allow $(PRODUCT_NAME) to save photos.",
        "NSCameraUsageDescription": "Allow $(PRODUCT_NAME) to access your camera",
        "NSMicrophoneUsageDescription": "Allow $(PRODUCT_NAME) to access your microphone",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Allow $(PRODUCT_NAME) to use your location.",
        "NSLocationAlwaysUsageDescription": "Allow $(PRODUCT_NAME) to use your location.",
        "NSLocationWhenInUseUsageDescription": "Allow $(PRODUCT_NAME) to use your location.",
        "UIBackgroundModes": [
          "location"
        ]
      }
    },
    "splash": {
      "image": "./assets/images/android/ic_launcher-web.png",
      "resizeMode": "contain",
      "backgroundColor": "#461E64"
    },
    "android": {
      "splash": {
        "image": "./assets/images/android/ic_launcher-web.png",
        "resizeMode": "contain",
        "backgroundColor": "#461E64"
      },
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/android/mipmap-xxxhdpi/geoshot_foreground.png"
      },
      "package": "app.geoshot.camera",
      "allowBackup": false,
      "permissions": [
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.READ_MEDIA_VIDEO",
        "android.permission.READ_MEDIA_AUDIO",
        "android.permission.READ_MEDIA_VISUAL_USER_SELECTED",
        "android.permission.ACCESS_MEDIA_LOCATION",
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.FOREGROUND_SERVICE",
        "android.permission.FOREGROUND_SERVICE_LOCATION",
        "android.permission.ACCESS_BACKGROUND_LOCATION",
        "android.permission.INTERNET",
        "android.permission.HIGH_SAMPLING_RATE_SENSORS"
      ]
    },
    "web": {
      "favicon": "./assets/images/android/mipmap-hdpi/geoshot_round.png"
    },
    "plugins": [
      [
        "expo-router",
        {
          "origin": "https://geoshot.vercel.app/"
        }
      ],
      [
        "expo-build-properties",
        {
          "android": {
            "enableProguardInReleaseBuilds": true,
            "enableShrinkResourcesInReleaseBuilds": true,
            "enableMinifyInReleaseBuilds": true,
            "minSdkVersion": 26
          }
        }
      ],
      "expo-font",
      "expo-web-browser",
      [
        "expo-media-library",
        {
          "photosPermission": "Allow $(PRODUCT_NAME) to access your photos.",
          "savePhotosPermission": "Allow $(PRODUCT_NAME) to save photos.",
          "isAccessMediaLocationEnabled": true,
          "androidPermissions": [
            "READ_MEDIA_IMAGES",
            "READ_MEDIA_VIDEO",
            "READ_MEDIA_AUDIO",
            "WRITE_EXTERNAL_STORAGE",
            "READ_EXTERNAL_STORAGE",
            "ACCESS_MEDIA_LOCATION"
          ]
        }
      ],
      [
        "react-native-vision-camera",
        {
          "cameraPermissionText": "Allow $(PRODUCT_NAME) to access your camera",
          "enableMicrophonePermission": true,
          "microphonePermissionText": "Allow $(PRODUCT_NAME) to access your microphone"
        }
      ],
      [
        "expo-location",
        {
          "isAndroidForegroundServiceEnabled": true,
          "isAndroidBackgroundLocationEnabled": true,
          "isIosBackgroundLocationEnabled": true,
          "locationAlwaysAndWhenInUsePermission": "Allow $(PRODUCT_NAME) to use your location."
        }
      ],
      [
        "expo-build-properties",
        {
          "android": {
            "enableSeparateBuildPerCPUArchitecture": true
          }
        }
      ],
      "expo-router",
      "./plugins/withAndroidSplits",
      "./plugins/withAndroidSigning",
      "./plugins/withDisableLint"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "jsEngine": "hermes",
    "runtimeVersion": "2.1.1"
  }
}
